{
  "name": "@douglasneuroinformatics/libnest",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.4",
  "description": "Generic NestJS decorators, pipes, modules, and utilities used across DNP projects",
  "author": "Joshua Unrau",
  "license": "Apache-2.0",
  "homepage": "https://github.com/DouglasNeuroInformatics/libnest#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DouglasNeuroInformatics/libnest.git"
  },
  "bugs": {
    "url": "https://github.com/DouglasNeuroInformatics/libnest/issues"
  },
  "exports": {
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./prisma": {
      "types": "./dist/prisma/prisma.index.d.ts",
      "import": "./dist/prisma/prisma.index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./user-config": {
      "types": "./dist/user-config.d.ts",
      "import": "./dist/user-config.js"
    },
    "./virtualization": {
      "types": "./dist/virtualization/virtualization.index.d.ts",
      "import": "./dist/virtualization/virtualization.index.js"
    }
  },
  "bin": {
    "libnest": "./dist/cli/bin.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -b tsconfig.build.json",
    "docs:build": "typedoc",
    "docs:dev": "concurrently \"typedoc --watch\" \"http-server docs -c-1\"",
    "format": "prettier --write src",
    "lint": "tsc && eslint --fix src",
    "prepare": "husky",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.5",
    "@nestjs/core": "^11.0.5",
    "@nestjs/platform-express": "^11.0.5",
    "@nestjs/testing": "^11.0.5",
    "@prisma/client": "^6.2.1",
    "express": "^5.0.1",
    "mongodb": "^6.10.0",
    "reflect-metadata": "~0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.6"
  },
  "dependencies": {
    "@douglasneuroinformatics/libjs": "^1.3.2",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.4.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.14",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "neverthrow": "^8.1.1",
    "serialize-error": "^12.0.0",
    "type-fest": "^4.33.0"
  },
  "devDependencies": {
    "@douglasneuroinformatics/eslint-config": "^5.3.1",
    "@douglasneuroinformatics/prettier-config": "^0.0.2",
    "@douglasneuroinformatics/semantic-release": "^0.2.1",
    "@douglasneuroinformatics/tsconfig": "^1.0.2",
    "@swc/core": "^1.10.9",
    "@swc/helpers": "^0.5.15",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.10",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.4",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "eslint": "9.19.0",
    "expect-type": "^1.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "typedoc": "^0.27.6",
    "typedoc-material-theme": "^1.3.0",
    "typedoc-plugin-zod": "^1.3.1",
    "typescript": "5.6.x",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.4"
  },
  "commitlint": {
    "extends": [
      "@douglasneuroinformatics/semantic-release/commitlint-config"
    ]
  },
  "prettier": "@douglasneuroinformatics/prettier-config",
  "release": {
    "extends": [
      "@douglasneuroinformatics/semantic-release"
    ]
  }
}
